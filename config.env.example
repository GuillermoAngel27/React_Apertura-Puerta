# Configuración del Sistema de Apertura de Puerta
# Copia este archivo como config.env y configura tus valores

# Base de datos MySQL
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=tu_password_aqui
DB_NAME=sistema_puerta

# JWT Secret (cambiar en producción)
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui

# Clave de encriptación bidireccional (32 caracteres)
ENCRYPTION_KEY=mi_clave_secreta_de_32_caracteres_123456

# Node-RED URL
NODE_RED_URL=http://localhost:1880/datosRecibidos

# Puerto del servidor
PORT=5000

# Entorno
NODE_ENV=development

# ========================================
# CONFIGURACIÓN DE USUARIO MAESTRO AUTOMÁTICO
# ========================================
# El sistema creará automáticamente un usuario administrador maestro
# al iniciar si no existe ningún administrador en el sistema

# Habilitar/deshabilitar creación automática de usuario maestro
MASTER_ADMIN_ENABLED=true

# Credenciales del usuario maestro (cambiar en producción)
MASTER_ADMIN_USERNAME=admin
MASTER_ADMIN_EMAIL=admin@sistema.com
MASTER_ADMIN_PASSWORD=admin123
MASTER_ADMIN_NAME=Administrador Sistema
